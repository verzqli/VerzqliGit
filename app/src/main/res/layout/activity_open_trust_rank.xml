<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/widget.RoundRectTextView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F0F6"
    android:orientation="vertical"
    tools:context="com.example.verzqli.application.OpenTrustRankActivity">

    <LinearLayout
        android:id="@+id/ll_open_trust_title"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#0A4670"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_open_trust_icon"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:background="@mipmap/certification_fail" />

        <TextView
            android:id="@+id/text_is_open_trust"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:text="未开启信任值"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:textColor="#fff"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_trust_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="0"
            android:textColor="#fff"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/img_open_trust_icon_title"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:background="@mipmap/certification_fail_title" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
    >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/person" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="通讯录认证"
                android:textColor="#0A4670"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="认证通讯录,增加信任值"
                android:textColor="#999"
                android:textSize="12sp" />
        </LinearLayout>


        <widget.RoundRectTextView
            android:id="@+id/text_open_trust"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="立即认证"
            android:textColor="#fff"
            android:textSize="14sp"
            app:back_ground="#508BED"
            app:pressedBackground="#80508bed"
            android:visibility="invisible"
            app:rect_radius="100" />

        <TextView
            android:id="@+id/text_open_trust_complete"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:onClick="dialog"
            android:orientation="horizontal"
            android:text="已认证"
            android:textColor="#0A4670"
            android:textSize="14sp"
            android:visibility="gone"
            />
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#0A4670"
                android:text="信任值" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#0A4670"
                android:text="开启信任值后即可进入亲缘" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:lineSpacingExtra="4sp"
            android:text="随着移动互联网的飞速发展，信任安全问题越来越受到人们的关注，通过认证手机通讯录，由可信联系人的推荐信息来计算不在通讯录中联系人的信任度，对用户进行信任度评分，更加直观的显示，帮助亲缘用户减少面临的威胁。"
            android:textAlignment="viewStart"
            android:textColor="#999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!--<widget.RoundRectTextView-->
            <!--android:id="@+id/text_complete"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="36dp"-->
            <!--android:gravity="center"-->
            <!--android:orientation="horizontal"-->
            <!--android:text="进入亲缘"-->
            <!--android:textColor="#fff"-->
            <!--android:textSize="18sp"-->
            <!--app:back_ground="#508BED"-->
            <!--app:pressedBackground="#80508bed"-->
            <!--app:rect_radius="50" />-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="filter"
        android:text="出发"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"

        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="11dp"
            android:layout_height="12dp"
            android:background="@mipmap/certification_pic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="亲缘保障您的信息安全" />
    </LinearLayout>

</LinearLayout>
