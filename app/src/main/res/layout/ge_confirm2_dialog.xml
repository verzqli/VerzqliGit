<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="133dp"
    android:orientation="vertical"
    >
    <TextView
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:id="@+id/ge_confirm2_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#FF030303"
        android:textSize="14sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFBEBFBF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ge_confirm2_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFE3824"
            android:textSize="17sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFBEBFBF"
            />
        <TextView
            android:id="@+id/ge_confirm2_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FF272A2C"
            android:textSize="17sp"
            />
    </LinearLayout>

</LinearLayout>